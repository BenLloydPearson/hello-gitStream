# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  output_files_object:
    if:
      - {{ setting.OUTPUT_FILES }}
    run:
    - action: add-comment@v1
      args:
        comment: |
          files ({{ files | length }}):
          {{ files | dump | safe }} 

setting:
  # Set to true to enable some debug output to see variable values
  OUTPUT_FILES: true
